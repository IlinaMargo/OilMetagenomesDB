{
    "project_name":        {"description": "Название проекта, в формате ФимилияАвтораГод", 
                            "example": "zilov2023", 
                            "possible_values": "Уникальное для статьи",
                            "type": "string", 
                            "required": true},

    "publication_year":    {"description": "Год публикации, например 2023",
                            "example": "2023",
                            "possible_values": "-",
                            "type": "integer",
                            "required": true},

    "publication_doi":     {"description": "Дои статьи, не должен содержать http://", 
                            "example": "10.1007/s00253-018-8766-2", 
                            "possible_values": "Уникальное для статьи",
                            "type": "string", 
                            "required": true,
                            "pattern": "^10.\\d{4,9}\\/[^,]+$"},

    "oil_wells":           {"description": "Айдишка скважины в статье", 
                            "example": "a1", 
                            "possible_values": "-",
                            "type": ["string", "null"], 
                            "required": true},

    "oilfield_name":       {"description": "Название нефтяного месторождения, должно писаться в статье или найти по координатам", 
                            "example": "romashkinskoe", 
                            "possible_values": "-",
                            "type": ["string", "null"], 
                            "required": true},
                      
    "latitude":            {"description": "Широта на которой забирали семпл", 
                            "example": "42.33", 
                            "possible_values": "-",
                            "type": ["number", "null"], 
                            "required": true},

    "longitude":           {"description": "Долгота на которой забирали семпл", 
                            "example": "42.33", 
                            "possible_values": "-",
                            "type": ["number", "null"], 
                            "required": true},

    "geo_loc_name":        {"description": "Страна, в которой находится скважина/местрождение, откуда брали образцы на анализ",
                            "example": "usa",
                            "possible_values": "Прописано в enums",
                            "type": "string",
                            "required": true,
                            "$ref": "assets/enums/geo_loc_name.json"},

    "study_primary_focus": {"description": "Направленность исследования в статье", 
                            "example": "ecology", 
                            "possible_values": "Прописано в enums",
                            "type": "string",
                            "required": true,
                            "$ref": "assets/enums/study_primary_focus.json"},

    "study_process":       {"description": "Биохимический процесс, который изучается в статье (bioremediation, microbial enhanced oil recovery (MEOR))", 
                            "example": "bioremediation", 
                            "possible_values": "Прописано в enums",
                            "type": "string",
                            "required": true,
                            "$ref": "assets/enums/study_process.json"},
                    
    "depth, m":            {"description": "Глубина забора семпла в метрах", 
                            "example": "1000", 
                            "possible_values": "-",
                            "type": ["number", "null"], 
                            "required": true},

     "temp, °C":           {"description": "Температура в цельсиях", 
                            "example": "100", 
                            "possible_values": "-",
                            "type": ["integer", "null"], 
                            "required": true},

    "pH":                  {"description": "Кислотность семпла", 
                            "example": "10", 
                            "possible_values": "-",
                            "type": ["integer", "null"], 
                            "required": true},

    "salinity, ppt":       {"description": "Указываем в ppt, если указано 10%, пишем 100; 1 ppt = 1000 мг/л", 
                            "example": "0.5", 
                            "possible_values": "-",
                            "type": ["number", "null"], 
                            "required": true},

    "API":                 {"description": "Указываем  в единицах API. Например: 0.932 g/cm3 = 932 kg/m3 =20 API", 
                            "example": "20", 
                            "possible_values": "-",
                            "type": ["integer", "null"], 
                            "required": true},

    "NO3-, мг/л":          {"description": "Указываем  в мг/л", 
                            "example": "11.6", 
                            "possible_values": "-",
                            "type": ["number", "null"], 
                            "required": true},

    "PO43-, мг/л":         {"description": "Указываем  в мг/л", 
                            "example": "19.5", 
                            "possible_values": "-",
                            "type": ["number", "null"], 
                            "required": true},

    "SO42-, мг/л":         {"description": "Указываем  в мг/л", 
                            "example": "8.86", 
                            "possible_values": "-",
                            "type": ["number", "null"], 
                            "required": true},

    "Ca2+, мг/л":          {"description": "Указываем  в мг/л", 
                            "example": "216.4", 
                            "possible_values": "-",
                            "type": ["number", "null"], 
                            "required": true},

    "Mg2+, мг/л":          {"description": "Указываем  в мг/л", 
                            "example": "28.8", 
                            "possible_values": "-",
                            "type": ["number", "null"], 
                            "required": true},

    "sample_name":         {"description": "Какую айдишку использовало исследование для этого семлпа.  Берем из статьи!! Если в статье нет- берем из NCBI", 
                            "example": "a1", 
                            "possible_values": "-",
                            "type": "string", 
                            "required": true},

    "feature":             {"description": "Описание среды из которой получен образец", 
                            "example": "reservoir", 
                            "possible_values": "Прописано в enums",
                            "type": "string", 
                            "required": true,
                            "$ref": "assets/enums/feature.json"},

    "material":            {"description": "Вид образца из которого выделяли днк бактерий", 
                            "example": "oil field production water", 
                            "possible_values": "Прописано в enums",
                            "type": "string", 
                            "required": true,
                            "$ref": "assets/enums/material.json"},

    "collection_date":     {"description": "Дата сбора образца", 
                            "example": "2020", 
                            "possible_values": "-",
                            "type": ["integer", "null"], 
                            "required": true},

    "archive":             {"description": "Архив в котором хранятся данные библиотеки", 
                            "example": "sra", 
                            "possible_values": "Прописано в enums",
                            "type": "string", 
                            "required": true,
                            "$ref": "assets/enums/archive.json"},

    "archive_project":     {"description": "Код проекта со всеми данными по образцам (PRJ). В статье может указываться код набора экспериментов (SRP), код эксперимента (SRX), код sample (SRS). Через эти обозначеня в NCBI можно найти код проекта", 
                            "example": "prjna604781, prjeb9855", 
                            "possible_values": "Уникальное для статьи",
                            "type": "string", 
                            "required": true},

    "archive_accession":   {"description": "Код данных для sample, начинается SRS для SRA или ERS для ENA", 
                            "example": "srs5536770", 
                            "possible_values": "Уникально глобально",
                            "type": "string", 
                            "required": true}
}